{
  "name": "kargoline-backend",
  "version": "0.0.1",
  "private": true,
  "main": "dist/index.js",
  "description": "repository dependencies for the kargoline-backend project",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/kargoline1/kargoline-banckend/src/main/"
  },
  "author": "https://github.com/oppongbaah",
  "license": "MIT",
  "bugs": {
    "url": "https://kargoline.atlassian.net/jira/software/c/projects/KL/issues"
  },
  "scripts": {
    "dev": "NODE_ENV=development DEBUG=kargoline:* nodemon ./src/index.ts",
    "prod": "NODE_ENV=production node ./dist/index.js",
    "test": "jest",
    "test:watch": "jest --watchAll --no-cache",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc --pretty && npm run build:js && npm run build:types",
    "build:js": "babel src --extensions '.ts,.tsx' --source-maps --out-dir dist --ignore 'test'",
    "build:types": "tsc --project tsconfig.build.json",
    "lint": "npm run lint:Js",
    "lint:Js": "node ./node_modules/eslint/bin/eslint.js . -f junit > eslint.xml",
    "lint:terminal": "eslint . --ext .ts",
    "redis:start": "sh ./scripts/redis.sh",
    "postinstall": "patch-package",
    "dev:worker": "set DEBUG=kargoline:* && ts-node ./src/extensions/workers/index.ts"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.6.1",
    "@types/qrcode": "^1.4.2",
    "@types/speakeasy": "^2.0.7",
    "apollo-server-errors": "^3.3.1",
    "apollo-server-express": "^3.6.3",
    "axios": "^0.26.1",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "bullmq": "^1.75.1",
    "connect-redis": "^6.1.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-session": "^1.17.3",
    "graphql": "^16.3.0",
    "graphql-passport": "^0.6.4",
    "helmet": "^5.0.2",
    "http": "0.0.1-security",
    "https": "^1.0.0",
    "ioredis": "^4.28.5",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.17",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "passport": "^0.5.2",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth2": "^0.2.0",
    "patch-package": "^6.4.7",
    "path": "^0.12.7",
    "qrcode": "^1.5.0",
    "speakeasy": "^2.0.0",
    "validator": "^13.7.0",
    "winston": "^3.5.1",
    "winston-daily-rotate-file": "^4.6.0",
    "winston-mongodb": "^5.0.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.17.7",
    "@babel/runtime": "^7.17.2",
    "@types/bcrypt": "^5.0.0",
    "@types/connect-redis": "0.0.18",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/helmet": "^4.0.0",
    "@types/http-errors": "^1.8.2",
    "@types/ioredis": "^4.28.8",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.17",
    "@types/passport-facebook": "^2.1.11",
    "@types/passport-google-oauth2": "^0.1.4",
