    "babel-loader": "^8.2.3",
    "eslint": "^7.32.0",
    "husky": "^7.0.0",
    "jest": "^27.1.3",
    "lint": "^0.7.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.3",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
